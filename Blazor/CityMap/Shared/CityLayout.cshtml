@if (Town != null)
{
  <div id="popup">
    <div class="wrapper">
        <div class="content">
            <span style="float: right; cursor: pointer; margin-right: 10px; margin-top: 10px" onclick=@(() => ClosePopup())>X</span>
            <div style="width:100%;text-align:center;font-size:25px;">
                @Town.title
            </div>

            <div style="width:100%;text-align:center;">
                <img src="@Town.url" style="width:95%" />
                <div>@Town.description</div>
            </div>
        </div>
    </div>
  </div>
  <div>

  </div>
}
@functions
{
    public City Town { get; set; }

    void ClosePopup()
    {
        Town = null;
    }
}
